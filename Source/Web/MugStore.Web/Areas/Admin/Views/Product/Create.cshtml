@model MugStore.Web.Areas.Admin.ViewModels.Product.CreateViewModel
@{
    var formAction = "Create";
    if (Model.Id > 0)
    {
        formAction = "Edit";
    }
}

<div class="row">
    @using (Html.BeginForm(formAction, "Product", FormMethod.Post, new { area = "Admin", @class = "form", id = Model.Id }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-12">
                <fieldset class="form-group">
                    <label for="Title">Title</label>
                    @Html.EditorFor(p => p.Title)
                </fieldset>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <fieldset class="form-group">
                    <label for="Description">Description</label>
                    @Html.TextAreaFor(p => p.Description, new { @class = "form-control" })
                </fieldset>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <fieldset class="form-group">
                    <label for="Code">Code</label>
                    @Html.EditorFor(p => p.Code)
                </fieldset>
            </div>
            <div class="col-md-4">
                <fieldset class="form-group">
                    <label for="Active">Active</label>
                    <select name="Active" id="Active" class="form-control">
                        @{
                            var selectedTrue = "";
                            var selectedFalse = "";
                            if (Model.Active)
                            {
                                selectedTrue = " selected=\"selected\"";
                            }
                            else
                            {
                                selectedFalse = " selected=\"selected\"";
                            }
                        }
                        <option value="True" @Html.Raw(selectedTrue)>Yes</option>
                        <option value="False" @Html.Raw(selectedFalse)>No</option>
                    </select>
                </fieldset>
            </div>
            <div class="col-md-4">
                <fieldset class="form-group">
                    <label for="CategoryId">Category</label>
                    <select name="CategoryId" id="CategoryId" class="form-control">
                        @foreach (var category in Model.Categories)
                        {
                            var selected = "";
                            if (category.Id == Model.CategoryId)
                            {
                                selected = " selected=\"selected\"";
                            }
                            <option value="@category.Id" @Html.Raw(selected)>@category.Name</option>
                        }
                    </select>
                </fieldset>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <fieldset class="form-group">
                    <label for="PreviewData">Preview Data</label>
                    @Html.EditorFor(p => p.PreviewData)
                </fieldset>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @if (Model.Id == 0)
                {
                    <input type="submit" class="btn btn-primary" value="Create">
                }
                else
                {
                    <input type="submit" class="btn btn-primary" value="Edit">
                }
            </div>
        </div>
    }
</div>

@if (Model.Id > 0)
{
    <div class="row margin-top">
        <div class="row">
            <div class="col-md-12">
                <h4>Images</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <ul id="images-list">
                    @foreach (var image in Model.Images)
                    {
                        <li><a href="@Url.RouteUrl("ProductImage", new { name = image.Name })" target="_blank"><img src="@Url.RouteUrl("ProductImage", new { name = image.Name })" style="max-width: 200px;"></a></li>
                    }
                </ul>
            </div>
        </div>
        <div class="row">
            @using (Html.BeginForm("Upload", "Product", FormMethod.Post, new { area = "admin", enctype = "multipart/form-data" }))
            {
                <div class="col-md-12">
                    @Html.HiddenFor(p => p.Id)
                    @Html.AntiForgeryToken()
                    <input type="file" name="file" id="file">
                </div>
                <div class="col-md-12">
                    <input type="submit" class="btn btn-primary" value="Upload">
                </div>
            }
        </div>
    </div>
}