@section scripts {
    @Scripts.Render("~/bundles/colorbox")
    <script>
        $(document).ready(function () {

            var scene = Scene;
            scene.init({ canvasId: 'canvas' });

            var mug1 = Mug;
            mug1.init('lqlq', { x: 0, height: 2, z: 0 }, scene.getScene());
            mug1.create();

            var cart = Cart;
            cart.init({ mug: mug1 });

        });
    </script>
